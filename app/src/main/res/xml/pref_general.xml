<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:id="@+id/pref_location"
        android:defaultValue="Makati"
        android:inputType="text"
        android:key="@string/pref_location_key"
        android:title="@string/pref_title_location" />

    <ListPreference
        android:defaultValue="@string/pref_unit_default"
        android:entries="@array/pref_unit_string_list"
        android:entryValues="@array/pref_unit_key_list"
        android:key="@string/pref_unit_key"
        android:title="@string/pref_unit_title" />

</PreferenceScreen>